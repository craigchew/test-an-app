<html lang="en">
  <head>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    {{>header}}
    <h1 class="ErrorHeader"><span class="material-symbols-outlined">warning </span>Error 404</h1>
    <div class="messageError">
        <p>Page {{pageName}} is not found.Redirecting To HomePage In <span>5</span> Seconds</p>
    </div>
      <script>

        const container = document.querySelector('.messageError p span');
        console.log(container);
        let i =0;
         const data = (timeout) => setInterval(()=>{
           i = i+1;
           container.innerHTML = (timeout - i);
           if(i >= timeout){
            clearInterval(data);
            window.location = "/home";
           }
          },1000)

        window.addEventListener('load', en=>{
               data(5);
        })


     </script>
  </body>


</html>